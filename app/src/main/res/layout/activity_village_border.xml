<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mapuni.gdydcaiji.activity.VillageBorderActivity">


    <com.esri.android.map.MapView
        android:id="@+id/mapview_collect"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.esri.android.map.MapView>

    <ImageView
        android:id="@+id/tianjia_collect"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginRight="14dp"
        android:background="#49878787"
        android:src="@drawable/dingdian_icon_selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linear_tools_collect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/baocun_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#49878787"
            android:text="保存"

            />

        <Button
            android:id="@+id/houtui_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:background="#49878787"
            android:text="后退"

            />
        <Button
            android:id="@+id/chanel_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:background="#49878787"
            android:text="取消" />
    </LinearLayout>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/center_icon2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>
