<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:divider="@drawable/shape_divider"
            app:showDividers="middle">

            <TextView
                android:id="@+id/tv_zjjgzs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:textColor="@color/color_red"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.LinearLayoutCompat
                    android:id="@+id/ll_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:divider="@drawable/shape_divider"
                    app:showDividers="middle">

                    <LinearLayout style="@style/HorizontalLinearLayout">

                        <TextView
                            style="@style/HintText"
                            android:text="楼宇类型" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="7"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_type0"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                android:layout_weight="1"
                                android:background="@drawable/poi_tv_bg_normal"
                                android:gravity="center"
                                android:textColor="@color/black_text" />

                            <TextView
                                android:id="@+id/tv_type1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                android:layout_weight="1"
                                android:background="@drawable/poi_tv_bg_normal"
                                android:gravity="center"
                                android:textColor="@color/black_text" />

                            <TextView
                                android:id="@+id/tv_type2"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                android:layout_weight="1"
                                android:background="@drawable/poi_tv_bg_normal"
                                android:gravity="center"
                                android:textColor="@color/black_text" />

                            <TextView
                                android:id="@+id/tv_type3"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                android:layout_weight="1"
                                android:background="@drawable/poi_tv_bg_normal"
                                android:gravity="center"
                                android:textColor="@color/black_text" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout style="@style/HorizontalLinearLayout">

                        <TextView
                            style="@style/HintText"
                            android:text="楼宇性质" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="7"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_xz0"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                android:layout_weight="1"
                                android:background="@drawable/poi_tv_bg_normal"
                                android:gravity="center"
                                android:textColor="@color/black_text" />

                            <TextView
                                android:id="@+id/tv_xz1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                android:layout_weight="1"
                                android:background="@drawable/poi_tv_bg_normal"
                                android:gravity="center"
                                android:textColor="@color/black_text" />

                            <TextView
                                android:id="@+id/tv_xz2"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                android:layout_weight="1"
                                android:background="@drawable/poi_tv_bg_normal"
                                android:gravity="center"
                                android:textColor="@color/black_text" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout style="@style/HorizontalLinearLayout">

                        <TextView
                            style="@style/HintText"
                            android:text="名称" />

                        <AutoCompleteTextView
                            android:id="@+id/et_lyName"
                            style="@style/CollectEditText"
                            android:singleLine="false" />

                    </LinearLayout>


                    <LinearLayout style="@style/HorizontalLinearLayout">

                        <TextView
                            style="@style/HintText"
                            android:text="分类" />

                        <Spinner
                            android:id="@+id/sp_lyfl"
                            style="@style/CustomSpinner" />

                    </LinearLayout>


                    <LinearLayout style="@style/HorizontalLinearLayout">

                        <TextView
                            style="@style/HintText"
                            android:text="地址" />

                        <AutoCompleteTextView
                            android:id="@+id/et_address"
                            style="@style/CollectEditText" />

                    </LinearLayout>

                    <LinearLayout style="@style/HorizontalLinearLayout">

                        <TextView
                            style="@style/HintText"
                            android:text="单元号" />

                        <com.mapuni.gdydcaiji.view.ClearEditText
                            android:id="@+id/et_dyh"
                            style="@style/CollectEditText" />

                    </LinearLayout>

                    <LinearLayout style="@style/HorizontalLinearLayout">

                        <TextView
                            style="@style/HintText"
                            android:text="电话" />

                        <com.mapuni.gdydcaiji.view.ClearEditText
                            android:id="@+id/et_tele"
                            style="@style/CollectEditText" 
                            android:inputType="phone"/>

                    </LinearLayout>

                    <LinearLayout style="@style/HorizontalLinearLayout">

                        <TextView
                            style="@style/HintText"
                            android:text="等级" />

                        <Spinner
                            android:id="@+id/sp_dj"
                            style="@style/CustomSpinner" />

                    </LinearLayout>

                    <LinearLayout style="@style/HorizontalLinearLayout">

                        <TextView
                            style="@style/HintText"
                            android:text="楼宇层数" />

                        <com.mapuni.gdydcaiji.view.ClearEditText
                            android:id="@+id/et_lycs"
                            style="@style/CollectEditText" 
                            android:inputType="number"/>

                    </LinearLayout>

                    <LinearLayout style="@style/HorizontalLinearLayout">

                        <TextView
                            style="@style/HintText"
                            android:text="楼宇住户数" />

                        <com.mapuni.gdydcaiji.view.ClearEditText
                            android:id="@+id/et_lyzhs"
                            style="@style/CollectEditText"
                            android:layout_weight="6"
                            android:inputType="number"/>

                        <ImageView
                            android:id="@+id/iv_calculator"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/ic_calculator" />

                    </LinearLayout>

                    <LinearLayout style="@style/HorizontalLinearLayout">

                        <TextView
                            style="@style/HintText"
                            android:text="备注" />

                        <com.mapuni.gdydcaiji.view.ClearEditText
                            android:id="@+id/et_bz"
                            style="@style/CollectEditText"
                            android:singleLine="false" />

                    </LinearLayout>

                    <include layout="@layout/layout_photo" />
                </android.support.v7.widget.LinearLayoutCompat>

                <View
                    android:id="@+id/cover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:visibility="gone" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_zj"
                style="@style/HorizontalLinearLayout"
                android:visibility="gone">

                <TextView
                    style="@style/HintText"
                    android:text="质检结果" />

                <com.mapuni.gdydcaiji.view.ClearEditText
                    android:id="@+id/et_zjjg"
                    style="@style/CollectEditText"
                    android:singleLine="false" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_save"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="16dp"
                android:background="@drawable/selector_login_btn"
                android:text="保存"
                android:textColor="@color/white" />

        </android.support.v7.widget.LinearLayoutCompat>

    </ScrollView>

</LinearLayout>