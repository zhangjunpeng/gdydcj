<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:focusable="true"
              android:focusableInTouchMode="true"
              android:orientation="vertical">

    <include layout="@layout/layout_title"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/ll_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:divider="@drawable/shape_divider"
                app:showDividers="middle">

                <LinearLayout style="@style/HorizontalLinearLayout">

                    <TextView
                        style="@style/HintText"
                        android:text="名称"/>

                    <com.mapuni.gdydcaiji.view.ClearEditText
                        android:id="@+id/et_Name"
                        style="@style/CollectEditText"/>

                </LinearLayout>

                <LinearLayout style="@style/HorizontalLinearLayout">

                    <TextView
                        style="@style/HintText"
                        android:text="地址"/>

                    <com.mapuni.gdydcaiji.view.ClearEditText
                        android:id="@+id/et_address"
                        style="@style/CollectEditText"/>

                </LinearLayout>

                <LinearLayout style="@style/HorizontalLinearLayout">

                    <TextView
                        style="@style/HintText"
                        android:text="分类"/>

                    <Spinner
                        android:id="@+id/sp_fl"
                        style="@style/CustomSpinner"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_bjcaiji"
                    style="@style/HorizontalLinearLayout">

                    <TextView
                        style="@style/HintText"
                        android:text="边界"/>

                    <TextView
                        android:id="@+id/tv_collect_status"
                        style="@style/HintText"
                        android:layout_weight="7"
                        android:text="未采集"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="96dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/HintText"
                        android:text="图片"/>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="96dp"
                        android:layout_weight="7">

                        <ImageView
                            android:id="@+id/iv_image"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/selector_camera"/>
                    </RelativeLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/btn_save"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_margin="16dp"
                    android:background="@drawable/selector_login_btn"
                    android:text="保存"
                    android:textColor="@color/white"/>

            </android.support.v7.widget.LinearLayoutCompat>

            <View
                android:id="@+id/cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:clickable="true"/>

        </RelativeLayout>
    </ScrollView>

</LinearLayout>