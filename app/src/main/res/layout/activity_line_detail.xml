<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/ll_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:divider="@drawable/shape_divider"
            app:showDividers="middle">

            <TextView
                android:id="@+id/tv_zjjgzs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:textColor="@color/color_red"
                android:visibility="gone" />
            
            <LinearLayout style="@style/HorizontalLinearLayout">

                <TextView
                    style="@style/HintText"
                    android:text="名称" />

                <AutoCompleteTextView
                    android:id="@+id/et_name"
                    style="@style/CollectEditText" />

            </LinearLayout>

            <LinearLayout style="@style/HorizontalLinearLayout">

                <TextView
                    style="@style/HintText"
                    android:text="起点" />

                <com.mapuni.gdydcaiji.view.ClearEditText
                    android:id="@+id/et_qd"
                    style="@style/CollectEditText" />

            </LinearLayout>

            <LinearLayout style="@style/HorizontalLinearLayout">

                <TextView
                    style="@style/HintText"
                    android:text="终点" />

                <com.mapuni.gdydcaiji.view.ClearEditText
                    android:id="@+id/et_zd"
                    style="@style/CollectEditText" />

            </LinearLayout>

            <LinearLayout style="@style/HorizontalLinearLayout">

                <TextView
                    style="@style/HintText"
                    android:text="备注" />

                <com.mapuni.gdydcaiji.view.ClearEditText
                    android:id="@+id/et_bz"
                    style="@style/CollectEditText"
                    android:inputType="number" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/HintText"
                    android:text="图片" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="96dp"
                    android:layout_weight="7">

                    <ImageView
                        android:id="@+id/iv_image"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/selector_camera" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_zj"
                style="@style/HorizontalLinearLayout"
                android:visibility="gone">

                <TextView
                    style="@style/HintText"
                    android:text="质检结果" />

                <com.mapuni.gdydcaiji.view.ClearEditText
                    android:id="@+id/et_zjjg"
                    style="@style/CollectEditText"
                    android:singleLine="false" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_save"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="16dp"
                android:background="@drawable/selector_login_btn"
                android:text="保存"
                android:textColor="@color/white" />

        </android.support.v7.widget.LinearLayoutCompat>

    </ScrollView>

</LinearLayout>